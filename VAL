<html>
    <body>
        <p> Enter anynumber to click ok</p>
        <input id="ichi" type="number" min="4" max="1000" required>
        <button onclick="myfunction()">OK!</button>
        <p id="result"></p>
        <script>
         function myfunction(){
            var inpObj = document.getElementById("ichi");
            if (!inpObj.checkValidity()){
                document.getElementById("result").innerHTML =
                inpObj.validationMessage;
            } 
            else{
                document.getElementById("result").innerHTML ="input ok!"
            }
         }
       </script>
    </body>
</html>